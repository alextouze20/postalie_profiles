<% require 'date' %>

<div class="all-profiles">
  <% @profiles.reverse.each do |profile| %>
    <% today = DateTime.now %>
    <% age = (DateTime.now - profile.dob).to_i %>
      <div class="container-profile">
        <%= link_to profile_path(profile.id) do %>
          <div class="img-container">
            <% profil_pic =
              if profile.photo.attached?
                cl_image_path(profile.photo.key,
                    width: 150, height: 150, crop: :fill, class: "profile-picture")
              else
                cl_image_path("https://postalie.com/wp-content/uploads/2020/11/profile-picture-default.png",
                      width: 150, height: 150, crop: :fill, class: "profile-picture")
              end
            %>
            <div class="profile-img" style="background-image: url(<%= profil_pic %>">
            </div>
          </div>
          <p class="name-title"><%= profile.fullname %></p>
          <p class="subtitle"><%= age / 365 %>, <%= profile.address_city %>, <%= profile.address_country %></p>
        <% end %>
      </div>
  <% end %>
</div>

<% if current_user.profile.nil? %>
  <%= link_to "Create my profile", new_profile_path %>
<% else %>
  <%= link_to "View my profile", profile_path(current_user.profile) %>
<% end %>

<style>

body {
  padding-bottom: 10%;
  background-color: #EDF2FF;
}

.all-profiles {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    margin-right: 1%;
    margin-left: 5%;
}

.container-profile {
    padding: 1%;
    background: white;
    border-radius: 5px;
    border: solid 2px #B9C8FF;
/*    box-shadow: 0px 0px 10px 0px #B9C8FF;*/
    flex-basis: 22%;
    margin-bottom: 1%;
    margin-right: 1.5%;
    color: #212529;
}

.container-profile:hover {
  transition: all .2s ease-in-out;
  transform: scale(1.1);
}

p.name-title {
  margin-top: 5%;
  text-decoration: none;
  color: #212529;
  text-align: center !important;
  font-size: 1.4em;
  font-weight: 500;
}

a:hover {
  text-decoration: none;
}


p.subtitle {
  text-decoration: none;
  color: #212529;
  text-align: center;
}

.img-container {
    text-align: center;
}

.profile-img {
    height: 250px;
    width: 100%;
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;
    margin-bottom: 5px;
}

@media only screen and (max-width: 600px) {
  .container-profile {
    padding: 3%;
    background: white;
    border-radius: 5px;
    border: solid 2px #B9C8FF;
/*    box-shadow: 0px 0px 10px 0px #B9C8FF;*/
    flex-basis: 45%;
    margin-bottom: 1%3
    margin-right: 1.5%;
    color: #212529;
  }
}

</style>

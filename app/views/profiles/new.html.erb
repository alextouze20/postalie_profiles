<% if current_user.profile.nil? %>



<div class="signup-container">
    <h1>Create your profile</h1>
    <%= simple_form_for (@profile) do |f| %>
      <%= f.input :firstname,
                  required: true,
                  label: false,
                  placeholder: "First name *"
                  %>
      <%= f.input :lastname,
                  required: true,
                  label: false,
                  placeholder: "Last name *"
                  %>
      <%= f.input :dob,
                  as: :date,
                  html5: true,
                  required: true,
                  label: false,
                  hint: "Date of birth *"
                  %>
      <%= f.input :bio,
                  label: false,
                  placeholder: "Add a profile bio..."
                  %>
      <%= f.input :address_street1,
                  required: true,
                  label: false,
                  placeholder: "Address line 1 *"
                  %>
      <%= f.input :address_street2,
                  label: false,
                  placeholder: "Address line 2"
                  %>
        <%= f.input :address_zip,
                  as: :integer,
                  required: true,
                  label: false,
                  placeholder: "Zip code *"
                  %>
        <%= f.input :address_city,
                  as: :string,
                  required: true,
                  label: false,
                  placeholder: "City *"
                  %>
      <%= f.country_select :address_country,
                  required: true,
                  label: false,
                  placeholder: "Country *"
                  %>
      <%= f.input :photo,
                  as: :file,
                  label: "ðŸ“¸ Upload photo"
                  %>
      <%= f.input :public,
                  as: :boolean,
                  checked_value: true,
                  label: "Make my profile public",
                  unchecked_value: false
                  %>
        <%= f.submit "Create my profile" %>
    <% end %>
</div>

<% else %>

<div class="signup-container">
  <h1>You already have a profile.</h1><br/><p>Sorry, you can only create one profile per user. However you can <%= link_to "edit your existing profile.", profile_path(current_user.profile) %></p>
</div>

<% end %>

